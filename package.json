{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.10.3",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "husky": "^6.0.0",
    "lerna": "^3.15.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build",
    "prepublish": "lerna run prepublish",
    "start:app": "yarn run build && yarn --cwd example && yarn --cwd example start",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepare": "husky install"
  },
  "size-limit": [
    {
      "path": "packages/react/dist/rich-text-react-renderer.cjs.production.min.js",
      "limit": "4.5 KB"
    },
    {
      "path": "packages/react/dist/rich-text-react-renderer.esm.js",
      "limit": "4.5 KB"
    },
    {
      "path": "packages/types/dist/rich-text-types.cjs.production.min.js",
      "limit": "75 B"
    },
    {
      "path": "packages/types/dist/rich-text-types.esm.js",
      "limit": "100 B"
    }
  ]
}
