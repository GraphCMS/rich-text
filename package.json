{
  "name": "@graphcms/rich-text-react-renderer",
  "description": "GraphCMS Rich Text React renderer",
  "version": "0.1.0",
  "author": "Jo√£o Pedro Schmitz <hey@joaopedro.dev> (https://joaopedro.dev)",
  "license": "MIT",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "escape-html": "^1.0.3"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/escape-html": "^1.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "husky": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "keywords": [
    "react",
    "rich-text",
    "renderer",
    "graphcms"
  ],
  "homepage": "https://github.com/GraphCMS/graphcms-richtext-renderer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GraphCMS/graphcms-richtext-renderer.git"
  },
  "bugs": {
    "url": "https://github.com/GraphCMS/graphcms-richtext-renderer/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "module": "dist/rich-text-react-renderer.esm.js",
  "size-limit": [
    {
      "path": "dist/rich-text-react-renderer.cjs.production.min.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/rich-text-react-renderer.esm.js",
      "limit": "2 KB"
    }
  ]
}
